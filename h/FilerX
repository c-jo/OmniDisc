#ifndef FILERX_H
#define FILERX_H

#include "bool.h"
#include "Wimp.h"

#include "Icon.h"


#define UNUSED(x) (void)x

char *strdup(const char *src);

extern unsigned task_handle;

extern unsigned pollword;

#define Pollword_FS    0x01
#define Pollword_Drive 0x02
#define Pollword_Icon  0x04

typedef struct
{
    int         is_removeable:1;    /* Is a dynamic disc */
    int         is_ejectable:1;     /* Has power eject */
    int         is_floppy:1;        /* Uses floppy semantics for mounting and formatting */
    char        discname[12];
    const char *validation;
    int         baricon;
} Drive;

#define DriveFlags_Present 1
#define DriveFlags_IconBar 2

typedef struct FS_s
{
    char      module[12];
    char      name[8];
    bool      fd_names;
    unsigned  posiion;
    Drive     drive[8];

    struct FS_s *next;
} FS;

extern FS *fses;

extern Icon *icons;

#endif
