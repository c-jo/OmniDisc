#ifndef FILERX_H
#define FILERX_H

#include <stdbool.h>
#include "Wimp.h"

#define UNUSED(x) (void)x

char *strdup(const char *src);

extern unsigned task_handle;

extern unsigned pollword;

typedef struct FS_s
{
    char      name[8];
    bool      fd_names;
    char      fvalidation[16];
    char      hvalidation[16];

    struct FS_s *next;
    struct FS_s *prev;
} FS;

extern FS *fses;

typedef struct Drive_s
{           
    FS       *fs;
    unsigned  drive;
    char      discname[12];
    char     *validation;
    int       position;
    bool      iconbar;
    int       icon;

    struct Drive_s *next;
    struct Drive_s *prev;
} Drive;

extern Drive *drives;

#endif
