#ifndef FILERX_H
#define FILERX_H

#ifdef NO_STDBOOL
typedef enum {false, true} bool;
#else
#include <stdbool.h>
#endif
#include "Wimp.h"

#include "Icon.h"


#define UNUSED(x) (void)x

char *strdup(const char *src);

extern unsigned task_handle;

extern unsigned pollword;

typedef struct FS_s
{
    char      name[8];
    bool      fd_names;

    struct FS_s *next;
    struct FS_s *prev;
} FS;

extern FS *fses;

typedef struct Drive_s
{           
    FS         *fs;
    unsigned    drive;
    char        discname[12];
    const char *validation;
    int         position;
    bool        iconbar;
    int         icon;

    struct Drive_s *next;
    struct Drive_s *prev;
} Drive;

extern Drive *drives;

extern Icon *icons;

#endif
