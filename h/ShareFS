#ifndef SHAREFS_H
#define SHAREFS_H

# SWIs
ShareFS_CreateShare = 0x47ac0
ShareFS_StopShare = 0x47ac1
ShareFS_EnumerateShares = 0x47ac2
ShareFS_IdentifyShare = 0x47ac3

# ShareFS message details
Message_FileShareDir = 0x408
ShareFSMessageFileShareDirFlags_Protected = (1<<0)
ShareFSMessageFileShareDirFlags_ReadOnly = (1<<1)
ShareFSMessageFileShareDirFlags_Hidden = (1<<2)
ShareFSMessageFileShareDirFlags_Authenticated = (1<<3)
ShareFSMessageFileShareDirFlags_CDROM = (1<<4)
ShareFSMessageFileShareDirFlags_WindowPosGiven = (1<<30)

# ShareFS_IdentifyShareFlags
ShareFS_IdentifyShareShareName = (1<<0)
ShareFS_IdentifyShareValidFlags = (1<<0)

# ShareFS_ShareFlags
ShareFS_ShareProtected = (1<<0)
ShareFS_ShareReadOnly = (1<<1)
ShareFS_ShareHidden = (1<<2)
ShareFS_ShareSubdir = (1<<3)
ShareFS_ShareCDROM = (1<<4)
ShareFS_ShareAuth = (1<<5)
ShareFS_ShareValidFlags = (1<<6) - 1

# Services
Service_ShareFSStarting = 0x97
Service_ShareFSDying = 0x98
Service_Sharing = 0x801c8

#endif
